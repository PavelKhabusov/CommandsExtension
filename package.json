{
  "name": "commands-extension",
  "displayName": "Commands Extension",
  "description": "Auto-interface for running project commands (node, pwsh, shell) from a Webview panel",
  "version": "0.0.2",
  "publisher": "PavelKhabusov",
  "engines": {
    "vscode": "^1.85.0"
  },
  "icon": "media/icon.png",
  "categories": [
    "Other"
  ],
  "keywords": [
    "commands",
    "terminal",
    "runner",
    "scripts",
    "tasks"
  ],
  "license": "MIT",
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "commandsExtension.openPanel",
        "title": "Commands: Open Panel"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "commandsExtension",
          "title": "Commands",
          "icon": "media/sidebar-icon.svg"
        }
      ]
    },
    "views": {
      "commandsExtension": [
        {
          "type": "webview",
          "id": "commandsExtension.sidebarView",
          "name": "Commands"
        }
      ]
    },
    "configuration": {
      "title": "Commands Extension",
      "properties": {
        "commandsExtension.configFile": {
          "type": "string",
          "default": "commands.json",
          "description": "Path to commands configuration file (relative to workspace root)"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "package": "npm run compile && vsce package --allow-missing-repository",
    "publish": "npm run compile && vsce publish --allow-missing-repository",
    "install-local": "npm run package && code --install-extension commands-extension-*.vsix",
    "gitpush": "git push origin HEAD",
    "update": "npm version patch && npm run publish"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.0"
  }
}
