# .ralphrc - Ralph project configuration
# Project: Commands Extension (VSCode)

# =============================================================================
# PROJECT IDENTIFICATION
# =============================================================================

PROJECT_NAME="commands-extension"
PROJECT_TYPE="typescript"

# =============================================================================
# LOOP SETTINGS
# =============================================================================

MAX_CALLS_PER_HOUR=100
CLAUDE_TIMEOUT_MINUTES=15
CLAUDE_OUTPUT_FORMAT="json"

# =============================================================================
# TOOL PERMISSIONS
# =============================================================================

ALLOWED_TOOLS="Write,Read,Edit,Grep,Glob,Bash(git add *),Bash(git commit *),Bash(git diff *),Bash(git log *),Bash(git status),Bash(git status *),Bash(git push *),Bash(git checkout *),Bash(git branch *),Bash(npm *),Bash(npx *),Bash(node *),Bash(tsc *),Bash(ls *),Bash(mkdir *)"

# =============================================================================
# SESSION MANAGEMENT
# =============================================================================

SESSION_CONTINUITY=true
SESSION_EXPIRY_HOURS=24

# =============================================================================
# TASK SOURCES
# =============================================================================

TASK_SOURCES="local"

# =============================================================================
# CIRCUIT BREAKER THRESHOLDS
# =============================================================================

CB_NO_PROGRESS_THRESHOLD=3
CB_SAME_ERROR_THRESHOLD=5
CB_OUTPUT_DECLINE_THRESHOLD=70
CB_COOLDOWN_MINUTES=30
CB_AUTO_RESET=false

# =============================================================================
# ADVANCED SETTINGS
# =============================================================================

RALPH_VERBOSE=false
